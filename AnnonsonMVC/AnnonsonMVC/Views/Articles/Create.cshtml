@model AnnonsonMVC.ViewModels.ArticelViewModel
@{
    ViewData["Title"] = "Create";
}
<h2>Skapa Annons</h2>
<hr />
<div class="row">
    <div class="col-md-20">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Namn</label>
                    <input asp-for="Name" class="form-control" asp-items="ViewBag.Name" />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Beskrivning</label>
                    <input asp-for="Description" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Pris</label>
                    <input asp-for="Price" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="PriceUnit" class="control-label">Prisenhet</label>
                    <input asp-for="PriceUnit" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="PriceText" class="control-label">Prísbeskrivning</label>
                    <input asp-for="PriceText" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="PublishBegin" class="control-label">Start datum</label>
                    <input asp-for="PublishBegin" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="PublishEnd" class="control-label">Slut datum</label>
                    <input asp-for="PublishEnd" class="form-control" />
                </div>

            </div>

            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="Company.CompanyId" class="control-label">Företag</label>
                    <select asp-for="Company.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Stores" class="control-label">Butiker</label>
                    <select multiple="multiple" asp-for="StoreIds" class="form-control" asp-items="@ViewBag.StoreId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Category.CategoryId" class="control-label">Kategori</label>
                    <select asp-for="Category.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>



                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label">Annonsbild</label>
                    <div class="col-md-10">
                        <input asp-for="ImageFile" id="ImageFile" name="ImageFile" />
                        <span asp-validation-for="ImageFile" class="text-danger">Ladda upp bild</span>
                    </div>
                </div>

                <div>
                    <div class="form-group">
                        <input type="submit" value="Create" style="float: right" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <button asp-controller="Index" class="btn-btn-defualt">Tillbaka</button>
</div>
@section Scripts {
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css"
          rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.listbox').multiselect({
                includeSelectAllOption: true
            });
        });
    </script>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
